<h1>Edit User</h1>

<div class="user-edit">
  <div class="form-group">
    <label class="col-sm-5">Choose user avatar</label>
    {{input value=avatarUrl class="form-control"}}
  </div>

  <div class="form-group">
    <label class="col-sm-5">User name</label>
    {{input value=name class="form-control"}}
  </div>

  <div class="form-group">
    <label class="col-sm-5">User email</label>
    {{input value=email class="form-control"}}
  </div>

  <div class="form-group">
    <label class="col-sm-5">User short bio</label>
    {{textarea value=bio class="form-control"}}
  </div>
</div>
  <div class="form-group">
    <div class="col-sm-10">
      <button {{action 'save'}} {{bind-attr class=":btn :btn-primary"}}>Update</button>
    </div>
  </div>

{{outlet}}
